# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Sanity CMS Configuration (REQUIRED)
SANITY_PROJECT_ID=your_project_id_here
SANITY_DATASET=production
SANITY_TOKEN=your_token_here

# OpenAI API (for AI summarization features)
OPENAI_API_KEY=sk-your-key-here

# Discord Webhook (for auto-posting)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# HubSpot (for form integration)
HUBSPOT_API_KEY=your-hubspot-key
HUBSPOT_PORTAL_ID=your-portal-id
HUBSPOT_FORM_ID=your-form-id

# Email Service (Mailchimp example)
MAILCHIMP_API_KEY=your-mailchimp-key
MAILCHIMP_LIST_ID=your-list-id

# Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Path Prefix (for GitHub Pages deployment)
PATH_PREFIX=

# Site URL (for production)
SITE_URL=https://newark-ai-townhall.org
