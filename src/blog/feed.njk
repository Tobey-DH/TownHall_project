---
permalink: /blog/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <link href="{{ site.url }}/blog/feed.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ collections.blog[0].publishedAt | dateToISO }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>
  {% for post in collections.blog | limit(20) %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ site.url }}/blog/{{ post.slug.current }}/"/>
    <updated>{{ post.publishedAt | dateToISO }}</updated>
    <id>{{ site.url }}/blog/{{ post.slug.current }}/</id>
    <content type="html">{{ post.description }}</content>
  </entry>
  {% endfor %}
</feed>
