            <script>
              // Send form submissions to Discord and optional Zapier (Airtable) webhooks
              (() => {
                const form = document.getElementById('volunteer-form');
                if (!form) return;

                const DISCORD_WEBHOOK = '{{ site.integrations.discord.webhookSubmissions }}';
                const ZAPIER_WEBHOOK = '{{ site.integrations.zapier.webhookSubmissions }}';

                const successBanner = document.getElementById('volunteer-success');
                const errorBanner = document.getElementById('volunteer-error');
                const hideBanners = () => {
                  if (successBanner) successBanner.style.display = 'none';
                  if (errorBanner) errorBanner.style.display = 'none';
                };

                form.addEventListener('submit', async (e) => {
                  e.preventDefault();
                  hideBanners();

                  const data = Object.fromEntries(new FormData(form));

                  // Discord payload
                  const discordPayload = {
                    content: 'ðŸŽ« **New Volunteer Signup!**',
                    embeds: [
                      {
                        title: data.name || 'New submission',
                        color: 0xe03131,
                        fields: [
                          { name: 'ðŸ“§ Email', value: data.email || 'â€”', inline: true },
                          { name: 'ðŸ“± Phone', value: data.phone || 'â€”', inline: true },
                          { name: 'ðŸ¢ Affiliation', value: data.affiliation || 'â€”', inline: true },
                          { name: 'ðŸ‘¤ Role Interest', value: data.role || 'â€”', inline: true },
                          { name: 'ðŸ“š Relevant Experience', value: data.experience || 'â€”', inline: false },
                          { name: 'ðŸ’¡ Why Volunteer', value: data.motivation || 'â€”', inline: false },
                        ],
                        footer: { text: new Date().toLocaleString() },
                      },
                    ],
                  };

                  // Zapier payload (simple key-value for Airtable step)
                  const zapierPayload = {
                    name: data.name || '',
                    email: data.email || '',
                    phone: data.phone || '',
                    affiliation: data.affiliation || '',
                    role: data.role || '',
                    experience: data.experience || '',
                    motivation: data.motivation || '',
                    submitted_at: new Date().toISOString(),
                    source: 'website-volunteer-form'
                  };

                  const requests = [];
                  // Always send to Discord
                  if (DISCORD_WEBHOOK) {
                    requests.push(
                      fetch(DISCORD_WEBHOOK, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(discordPayload),
                      })
                    );
                  }
                  // Optionally send to Zapier
                  if (ZAPIER_WEBHOOK) {
                    requests.push(
                      fetch(ZAPIER_WEBHOOK, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(zapierPayload),
                      })
                    );
                  }

                  try {
                    if (requests.length === 0) throw new Error('No endpoints configured');
                    const results = await Promise.allSettled(requests);
                    const anySuccess = results.some(r => r.status === 'fulfilled' && (!r.value || r.value.ok !== false));
                    if (!anySuccess) throw new Error('All endpoints failed');

                    if (successBanner) successBanner.style.display = 'block';
                    form.reset();
                  } catch (error) {
                    console.error('Submission error:', error);
                    if (errorBanner) errorBanner.style.display = 'block';
                  }
                });
              })();
            </script>
